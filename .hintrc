{
    "connector": {
        "name": "puppeteer",
        "options": {
            "headless": true
        }
    },
    "formatters": [
        "stylish"
    ],
    "hints": {
        "apple-touch-icons": "off",
        "axe/aria": "error",
        "axe/color": "error",
        "axe/forms": "error",
        "axe/keyboard": "error",
        "axe/language": "error",
        "axe/name-role-value": "error",
        "axe/parsing": "error",
        "axe/semantics": "error",
        "axe/sensory-and-visual-cues": "error",
        "axe/structure": "error",
        "axe/tables": "error",
        "axe/text-alternatives": "error",
        "axe/time-and-media": "error",
        "button-type": "error",
        "content-type": [
            "error",
            {
                ".*\\.js": "application/javascript; charset=utf-8"
            }
        ],
        "disown-opener": "error",
        "highest-available-document-mode": "error",
        "html-checker": "off",
        "http-cache": "off",
        "image-optimization-cloudinary": "off",
        "manifest-app-name": "error",
        "manifest-exists": "off",
        "manifest-file-extension": "error",
        "manifest-is-valid": "error",
        "meta-charset-utf-8": "error",
        "meta-viewport": "error",
        "minified-js": "error",
        "no-bom": "error",
        "no-broken-links": "error",
        "no-disallowed-headers": "off",
        "no-friendly-error-pages": "error",
        "no-html-only-headers": "error",
        "no-http-redirects": [
            "error",
            {
                "max-html-redirects": 1
            }
        ],
        "no-p3p": "error",
        "no-protocol-relative-urls": "error",
        "no-vulnerable-javascript-libraries": "error",
        "sri": "off",
        "ssllabs": "error",
        "strict-transport-security": "off",
        "stylesheet-limits": "error",
        "validate-set-cookie-header": "error",
        "x-content-type-options": "off"
    },
    "hintsTimeout": 120000,
    "ignoredUrls": [
        {
            "domain": ".*fonts\\.googleapis\\.com/.*",
            "hints": [
                "*"
            ]
        },
        {
            "domain": ".*fonts\\.gstatic\\.com/.*",
            "hints": [
                "*"
            ]
        },
        {
            "domain": ".*github\\.io.*.ico$",
            "hints": [
                "content-type"
            ]
        }
    ]
}
